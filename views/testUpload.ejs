<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Document</title>
  <!-- <link rel="stylesheet" href="gridtest.css"> -->
<style>
  #popup-container {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    text-align: center;
  }

  #popup-container form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #1a1818;
    color: #e6e6ea;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    display: inline-block;
    text-align: left;
  }

  form input,
  form select,
  form textarea {
    margin-bottom: 10px;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 3px;
    background-color: #130c0c;
    border-color:#130c0c;
  }

  #photo{
    background-color:#1a1818;
    border-color:#1a1818;
  }
  
  #submitFormBtn {
    color:#e6e6ea;
    background-color:#1a1818;
    border-color:#1a1818;
    display: inline-block;
  }

  #submitFormBtn:hover {
    color:#e45f39;
    background-color:#130c0c;
    border-color:#e45f39;
  }

  .submit-container {
    text-align: center;
    margin-top: 20px;
  }

  .photoSubmit {
  text-align: left;

  }


</style>
</head>
<body>
     
      <a href="#" id="upload-button"><input type="submit" value="Upload"></a>

      <div id="popup-container">

       <!-- <%- include('partials/uploadForm') %> -->
       <form action="/submit" method="post" enctype="multipart/form-data">
        <label for="username">Username</label><br><br>
        <input type="text" id="username" name="username" required><br>

        <label for="title">Title</label><br><br>
        <input type="text" id="title" name="title" required><br>

        <label for="description">Description</label><br><br>
        <textarea id="description" name="description" rows="4" cols="50" required></textarea><br>

        <div class="photoSubmit">
        <label for="photo">Photo</label>
        <input type="file" id="photo" name="photo" accept="image" required><br>
        </div>

        <div class="submit-container">
          <input type="submit" value="Upload" id="submitFormBtn">
        </div>
      </form>
      </div>
    

      <div class="grid_container" id="submissions_container"></div>
  
      <script src="/gridtest.js"></script>
      <script>
        const openPopupButton = document.getElementById('upload-button');
        const popupContainer = document.getElementById('popup-container');

        openPopupButton.addEventListener('click', () => {
          popupContainer.style.display = 'block';
        });
      </script>
      

</body>
</html>